<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:layout_weight="1"
	>

	<TextView
		android:id="@+id/enter_user_password_config_name"
		android:text="the_config.ovpn"
		android:textSize="16sp"
		android:textStyle="bold"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginBottom="4sp"
		/>

	<EditText 
		android:id="@+id/enter_user_password_user" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:hint="@string/enter_user_password_user"	
		android:inputType="text"	
		/>
	<EditText 
		android:id="@+id/enter_user_password_password" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:hint="@string/enter_user_password_password"
		android:inputType="textPassword"
		android:password="true"
		/>
    <CheckBox
        android:id="@+id/enter_user_password_remember"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Remember passphrase"
        />

</LinearLayout>	